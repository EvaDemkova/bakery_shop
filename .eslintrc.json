{
  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "es6": true
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-uses-react": "warn",   
    "react/jsx-uses-vars": "warn", 
    "react/jsx-no-undef": "off", 
    "no-undef": "warn", 
    "react/no-unescaped-entities": [2, { "forbid": [">", "}"] }]
  }
}
